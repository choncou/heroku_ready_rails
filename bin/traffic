#!/usr/bin/env ruby
# frozen_string_literal: true

require 'active_support'
require 'optparse'
require 'optparse/uri'

Options = Struct.new(:domain, :sleep, keyword_init: true)

class Parser
  def self.parse(options)
    args = Options.new(sleep: 5, domain: "http://localhost:3000")

    opt_parser = OptionParser.new do |opts|
      opts.banner = "Usage: ./bin/traffic -d http://localhost:3000"

      opts.on("-d", "--domain domain", URI, "base domain of your app") do |domain|
        args.domain = domain.to_s
      end

      opts.on("-s", "--sleep sleep", Integer, "seconds between making requests: default 5") do |seconds|
        args.sleep = seconds
      end

      opts.on("-h", "--help", "Prints this help") do
        puts opts
        exit
      end
    end

    opt_parser.parse!(options)
    return args
  end
end

options = Parser.parse [*ARGV]
p options

commands = [
  "curl -s -o /dev/null -I -w \"%{http_code}\n\" #{options.domain}",
  "curl -s -o /dev/null -I -w \"%{http_code}\n\" #{options.domain}/posts?starts_with=E",
  "sleep #{options.sleep}",
]
output = exec "while :; do #{commands.join(';')}; done"
