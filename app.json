{
  "name": "Appsignal Blog Post: Setting up a Rails app for monitoring",
  "description": "An example application for setting up monitoring in a Rails application",
  "repository": "https://github.com/choncou/heroku_ready_rails",
  "keywords": ["ruby", "rails", "example"],
  "env": {
    "SECRET_KEY_BASE": {
      "description": "secret key for rails sessions",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    },
    "sidekiq": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "heroku-postgresql:hobby-dev",
    "heroku-redis:hobby-dev"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
